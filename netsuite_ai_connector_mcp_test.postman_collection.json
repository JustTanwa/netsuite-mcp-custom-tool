		{
			"name": "Call runCustomSQL Tool",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"jsonrpc\": \"2.0\",\r\n    \"id\": \"{{$guid}}\",\r\n    \"method\": \"tools/call\",\r\n    \"params\": {\r\n        \"name\": \"runCustomSuiteQL\",\r\n        \"arguments\": {\r\n            \"description\": \"Get the id and transaction number of the top 5 latest sales orders ordered by transaction date\",\r\n            \"sqlQuery\": \"SELECT TOP 5 id, tranid FROM transaction WHERE type = 'SalesOrd' ORDER BY trandate DESC\"\r\n        }\r\n    }\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{SUITETALK_URL}}/services/mcp/v1/all",
					"host": [
						"{{SUITETALK_URL}}"
					],
					"path": [
						"services",
						"mcp",
						"v1",
						"all"
					]
				}
			},
			"response": []
		},
